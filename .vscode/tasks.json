{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "deno fmt",
            "type": "shell",
            "command": "deno fmt",
            "problemMatcher": [
                "$deno"
            ]
        },
        {
            "label": "deno lint",
            "type": "shell",
            "command": "deno lint",
            "problemMatcher": [
                "$deno-lint"
            ]
        },
        {
            "label": "deno run",
            "type": "shell",
            "command": "deno run --unstable --allow-net --allow-write --allow-read --allow-env src/main.ts",
            "problemMatcher": [
                "$deno"
            ]
        },
        {
            "label": "deno test",
            "type": "shell",
            "command": "deno test src/__tests__",
            "problemMatcher": [
                "$deno-test"
            ]
        }
    ]
}